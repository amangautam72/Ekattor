    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffc208">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#fff">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu"
                android:onClick="showMenuAction"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/welcome_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Hello,"
                    android:textColor="#CD602E"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username_textView"
                    android:textSize="18sp"
                    android:textColor="#CD602E"
                    android:text="Username"
                    android:layout_toRightOf="@+id/welcome_textview"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/students"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/first_section"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_006_student"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/first_section_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Students"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/total_student_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(200)"
                    android:layout_gravity="center"
                    android:textColor="#fff"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/teachers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/second_section"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_005_presentation"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/second_section_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teachers"
                    android:layout_gravity="center"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/total_teacher_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(50)"
                    android:layout_gravity="center"
                    android:textColor="#fff"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/parents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/third_section"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_004_family"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/third_section_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parents"
                    android:layout_gravity="center"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/total_parent_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(50)"
                    android:layout_gravity="center"
                    android:textColor="#fff"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/present_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/fourth_section"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_003_checklist"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/fourth_section_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present Today"
                    android:textColor="#fff"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"/>

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Today"-->
                    <!--android:textColor="#fff"-->
                    <!--android:maxLines="1"-->
                    <!--android:layout_gravity="center_horizontal"/>-->

                <TextView
                    android:id="@+id/attendance_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(100)"
                    android:layout_gravity="center"
                    android:textColor="#fff"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Board"
                android:textColor="#fff"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"
                android:layout_marginTop="5dp"></LinearLayout>

        </LinearLayout>


        <ListView
            android:id="@+id/notifications"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null">

        </ListView>

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/menu_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#f6f7f9"
        android:choiceMode="singleChoice"
        android:divider="#f6f7f9"
        android:dividerHeight="1dp"
        android:groupIndicator="@null" >
    </ExpandableListView>

</android.support.v4.widget.DrawerLayout>
